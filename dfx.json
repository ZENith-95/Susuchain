{
  "version": 1,
  "canisters": {
    "susuchain": {
      "type": "motoko",
      "main": "src/susuchain-app-backend/susuchain.mo"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "args": ""
    },
    "deploy": {
      "timeout_seconds": 600
    }
  }
}
